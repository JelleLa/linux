" TURN LINE NUMBERS ON
set number

" TURN ON SYNTAX
syntax on

" TURN ON MOUSE MODE
set mouse=a

" CONTROL-C CONTROL-V SUPPORT
source $VIMRUNTIME/mswin.vim
behave mswin

" ENCODING SETTINGS
set encoding=utf-8

" NO LINE BREAKS IN WORDS
set linebreak

" CURSOR ALWAYS VISIBLE
set ruler

" UNDO LIMIT
set history=1000




